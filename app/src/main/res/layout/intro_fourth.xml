<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblCaption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="@string/intro_4_caption1"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblExplain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblCaption1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/intro_4_explanation1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblCaption2"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblExplain1"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/intro_4_caption2"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblExplain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblCaption2"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/intro_4_explanation2"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>